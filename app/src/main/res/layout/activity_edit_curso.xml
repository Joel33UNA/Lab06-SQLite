<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddEstudiante">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextDescripcionEdit"
            android:hint="Descripción"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextCreditosEdit"/>
    <TextView
            android:text="Editar Curso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textSize="30sp" android:layout_marginEnd="93dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="94dp"
            android:layout_marginBottom="70dp" app:layout_constraintBottom_toTopOf="@+id/editTextDescripcionEdit"/>
    <Button
            android:text="Editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnAddCurso"
            app:backgroundTint="#4CAF50"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="250dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="158dp"
            android:layout_marginEnd="149dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextCreditosEdit"
            android:layout_marginEnd="102dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
            android:layout_marginBottom="70dp" app:layout_constraintBottom_toTopOf="@+id/btnAddCurso"
            android:hint="Créditos" app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>